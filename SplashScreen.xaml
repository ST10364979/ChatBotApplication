<Window x:Class="ChatBotApplication.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SplashScreen"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Height="450" 
        Width="800"
        Loaded="Window_Loaded">

    <!-- Modern border with drop shadow and rounded corners -->
    <Border BorderBrush="#800080"
            BorderThickness="2"
            CornerRadius="20"
            Background="Transparent">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" 
                              Color="#800080"
                              Opacity="0.8"
                              BlurRadius="20"/>
        </Border.Effect>

        <!-- Main Grid Layout -->
        <Grid>
            <!-- Background Image (now properly centered and scaled) -->
            <Image Source="/images/3334896.jpg"  
                   Stretch="UniformToFill"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"/>

            <!-- Semi-transparent overlay for better text visibility -->
            <Rectangle Fill="#33000000" Opacity="0.6"/>

            <!-- Content Container -->
            <Grid>
                <!-- Welcome Text (simplified layout) -->
                <StackPanel VerticalAlignment="Center" 
                            HorizontalAlignment="Center"
                            TextBlock.TextAlignment="Center">
                    <TextBlock Text="Welcome To The AI" 
                               FontSize="30" 
                               FontWeight="Bold"
                               Foreground="White"     
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Chat-Bot Where" 
                               FontSize="30" 
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Quality meets Safety" 
                               FontSize="30" 
                               FontWeight="Bold"
                               Foreground="White"/>
                </StackPanel>

                <!-- Get Started Button - Modernized with rounded corners -->
                <Button Content="Get Started"
                        Width="150" 
                        Height="45"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Background="#800080"
                        BorderBrush="#4B0082"
                        BorderThickness="1"
                        Cursor="Hand"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,40"
                        Click="GetStarted_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    CornerRadius="20"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#4B0082"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>